{
  "name": "hyperextension",
  "displayName": "Hyperliquid Manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build",
    "lint": "next lint",
    "all": "plasmo dev & next dev --port 1947",
    "gelato": "npx tsx src/scripts/gelato.ts",
    "get-wallet": "npx tsx src/scripts/get-wallet.ts",
    "gelato-submit": "npx tsx src/scripts/gelato-submit.ts",
    "check-nonce": "npx tsx src/scripts/check-usdc-nonce.ts",
    "onboarding": "npx tsx src/scripts/onboarding.ts",
    "create-export": "npx tsx src/scripts/create-export-wallet.ts",
    "use-supabase-wallet": "npx tsx src/scripts/use-supabase-wallet.ts",
    "usdc-listener": "npx tsx src/scripts/usdc-listener.ts",
    "deposit-listener": "npx tsx microservices/deposit-listener/index.ts",
    "hyperunit": "npx tsx src/scripts/hyperunit.ts",
    "unix-timestamp": "npx tsx src/scripts/unix-timestamp.ts",
    "get-private-key": "npx tsx src/scripts/get-private-key-from-supabase-user.ts",
    "hyperliquid-order": "npx tsx src/scripts/hyperliquid-order.ts",
    "hyperliquid-supabase": "npx tsx src/scripts/hyperliquid-supabase.ts",
    "encrypt": "npx tsx src/scripts/encrypt.ts",
    "generate-encryption-master": "npx tsx src/scripts/generate-encryption-master-key.ts",
    "decrypt": "npx tsx src/scripts/decrypt.ts",
    "hyperliquid-deposits": "npx tsx src/scripts/hyperliquid-deposits.ts",
    "hyperliquid-pnl-history": "npx tsx src/scripts/hyperliquid-pnl-history.ts",
    "leaderboard": "npx tsx src/scripts/leaderboard.ts",
    "hyperliquid-closed-trades": "npx tsx src/scripts/hyperliquid-closed-trades.ts",
    "gelato-manual": "npx tsx microservices/deposit-listener/manual-submit.ts",
    "hyperliquid-activity": "npx tsx src/scripts/hyperliquid-activity.ts"
  },
  "dependencies": {
    "@gelatonetwork/relay-sdk": "^5.6.0",
    "@gelatonetwork/relay-sdk-viem": "^1.4.0",
    "@mantine/charts": "^8.1.3",
    "@mantine/core": "^8.1.2",
    "@mantine/hooks": "^8.1.2",
    "@plasmohq/messaging": "^0.7.2",
    "@plasmohq/storage": "^1.15.0",
    "@supabase/supabase-js": "^2.50.2",
    "@tabler/icons-react": "^3.34.0",
    "@turnkey/sdk-browser": "^5.2.3",
    "@turnkey/sdk-server": "^4.2.0",
    "@turnkey/viem": "^0.9.10",
    "bcryptjs": "^3.0.2",
    "elliptic": "^6.6.1",
    "hyperliquid": "^1.7.6",
    "next": "15.3.4",
    "qrcode.react": "^4.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "viem": "^2.31.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/chrome": "^0.0.328",
    "@types/elliptic": "^6.4.18",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "plasmo": "^0.90.5",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "manifest": {
    "manifest_version": 3,
    "name": "Hyperliquid Manager",
    "version": "0.1.0",
    "description": "A basic Chrome extension using Plasmo and Next.js.",
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs",
      "identity",
      "identity.email"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "key": "$CRX_KEY",
    "web_accessible_resources": [
      {
        "resources": [
          "options.html",
          "tabs/*"
        ],
        "matches": [
          "<all_urls>"
        ],
        "extension_ids": [
          "$CRX_ID"
        ]
      }
    ]
  }
}
